@using MVCFinApp.Data.Enums
@model MVCFinApp.Models.BankAccount

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>BankAccount</h4>

<h1 class="mt-3">Create</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HouseHoldId" class="control-label" hidden></label>
                <input type="hidden" asp-for="HouseHoldId" class="form-control" value="@ViewData["HouseHoldId"]" />
                @*<select asp-for="HouseHoldId" class="form-control" asp-items="ViewBag.HouseHoldId"></select>*@
            </div>

            <div class="form-group">
                <label asp-for="FAUserId" class="control-label"></label>
                <input asp-for="FAUserId" class="form-control" />
                <span asp-validation-for="FAUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                @*<input asp-for="Type" class="form-control" />*@
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<AccountType>()" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartingBalance" class="control-label"></label>
                <input asp-for="StartingBalance" class="form-control" />
                <span asp-validation-for="StartingBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentBalance" class="control-label"></label>
                <input asp-for="CurrentBalance" class="form-control" />
                <span asp-validation-for="CurrentBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-info" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
