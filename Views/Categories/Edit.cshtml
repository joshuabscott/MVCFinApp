@using Microsoft.AspNetCore.Identity
@inject UserManager<FAUser> UserManager
@model MVCFinApp.Models.Category

@{
    ViewData["Title"] = "Edit";
    var user = await UserManager.GetUserAsync(User);
}

<h2>Edit</h2>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
